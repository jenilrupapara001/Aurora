{%- if section.settings.show_announcement -%}
  <div class="announcement-bar" data-announcement-bar>
    <div class="container">
      <div class="announcement-bar__content">
        {%- if section.settings.announcement_link != blank -%}
          <a href="{{ section.settings.announcement_link }}" class="announcement-bar__link">
            {{ section.settings.announcement_text }}
          </a>
        {%- else -%}
          <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
        {%- endif -%}

        {%- if section.settings.show_close -%}
          <button type="button" class="announcement-bar__close" data-announcement-close aria-label="Close announcement">
            {% render 'icon', icon: 'close' %}
          </button>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

<style>
  .announcement-bar {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    padding: 0.75rem 0;
    text-align: center;
    position: relative;
  }

  .announcement-bar__content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    position: relative;
  }

  .announcement-bar__text,
  .announcement-bar__link {
    font-size: 0.875rem;
    font-weight: 500;
    margin: 0;
    color: inherit;
    text-decoration: none;
  }

  .announcement-bar__link:hover {
    text-decoration: underline;
  }

  .announcement-bar__close {
    position: absolute;
    right: 0;
    background: none;
    border: none;
    padding: 0.25rem;
    cursor: pointer;
    color: inherit;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .announcement-bar__close:hover {
    opacity: 1;
  }

  .announcement-bar__close svg {
    width: 16px;
    height: 16px;
  }

  .announcement-bar.hidden {
    display: none;
  }
</style>

<script>
  const announcementBar = document.querySelector('[data-announcement-bar]');
  const closeButton = document.querySelector('[data-announcement-close]');

  if (closeButton && announcementBar) {
    closeButton.addEventListener('click', () => {
      announcementBar.classList.add('hidden');
      localStorage.setItem('announcement-closed', 'true');
    });

    // Check if announcement was previously closed
    if (localStorage.getItem('announcement-closed') === 'true') {
      announcementBar.classList.add('hidden');
    }
  }
</script>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "announcement_link",
      "label": "Announcement link"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "Show close button",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
