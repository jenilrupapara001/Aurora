{%- liquid
  assign product = all_products[section.settings.product]
  assign current_variant = product.selected_or_first_available_variant
  assign featured_image = current_variant.featured_image | default: product.featured_image
  assign enable_sticky = section.settings.enable_sticky_add_to_cart
  assign show_vendor = section.settings.show_vendor
  assign show_sku = section.settings.show_sku
-%}

<section class="product-main section" data-section-id="{{ section.id }}" data-product-id="{{ product.id }}">
  <div class="container">
    <div class="product-main__grid">
      {%- comment -%} Product Media {%- endcomment -%}
      <div class="product-main__media">
        <div class="product-gallery">
          <div class="product-gallery__main">
            {%- for media in product.media -%}
              <div class="product-gallery__item {% if forloop.first %}active{% endif %}" data-media-id="{{ media.id }}">
                {%- case media.media_type -%}
                  {%- when 'image' -%}
                    <img
                      srcset="{{ media | image_url: width: 600 }} 600w,
                              {{ media | image_url: width: 800 }} 800w,
                              {{ media | image_url: width: 1000 }} 1000w"
                      src="{{ media | image_url: width: 800 }}"
                      alt="{{ media.alt | escape }}"
                      loading="lazy"
                      width="{{ media.width }}"
                      height="{{ media.height }}"
                    >
                  {%- when 'video' -%}
                    {{ media | video_tag: controls: true }}
                  {%- when 'external_video' -%}
                    {{ media | external_video_tag }}
                {%- endcase -%}
              </div>
            {%- endfor -%}
          </div>

          {%- if product.media.size > 1 -%}
            <div class="product-gallery__thumbnails">
              {%- for media in product.media -%}
                <button
                  type="button"
                  class="product-gallery__thumbnail {% if forloop.first %}active{% endif %}"
                  data-media-id="{{ media.id }}"
                  aria-label="View image {{ forloop.index }}"
                >
                  <img
                    src="{{ media | image_url: width: 150 }}"
                    alt="{{ media.alt | escape }}"
                    loading="lazy"
                  >
                </button>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>

      {%- comment -%} Product Info {%- endcomment -%}
      <div class="product-main__info">
        <div class="product-main__info-inner {% if enable_sticky %}product-main__info--sticky{% endif %}">
          {%- if show_vendor and product.vendor != blank -%}
            <p class="product-main__vendor">{{ product.vendor }}</p>
          {%- endif -%}

          <h1 class="product-main__title">{{ product.title }}</h1>

          <div class="product-main__price">
            <span class="product-main__price-current" data-product-price>
              {{ current_variant.price | money }}
            </span>
            {%- if current_variant.compare_at_price > current_variant.price -%}
              <span class="product-main__price-compare" data-compare-price>
                {{ current_variant.compare_at_price | money }}
              </span>
            {%- endif -%}
          </div>

          {%- if show_sku and current_variant.sku != blank -%}
            <p class="product-main__sku">SKU: <span data-variant-sku>{{ current_variant.sku }}</span></p>
          {%- endif -%}

          {%- if product.description != blank -%}
            <div class="product-main__description">
              {{ product.description }}
            </div>
          {%- endif -%}

          {%- form 'product', product, id: 'product-form', class: 'product-form' -%}
            {%- unless product.has_only_default_variant -%}
              <div class="product-form__variants">
                {%- for option in product.options_with_values -%}
                  <div class="product-form__option">
                    <label class="product-form__option-label">
                      {{ option.name }}
                    </label>
                    <div class="product-form__option-values">
                      {%- for value in option.values -%}
                        <input
                          type="radio"
                          id="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                          name="{{ option.name }}"
                          value="{{ value | escape }}"
                          form="product-form"
                          {% if option.selected_value == value %}checked{% endif %}
                        >
                        <label for="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}">
                          {{ value }}
                        </label>
                      {%- endfor -%}
                    </div>
                  </div>
                {%- endfor -%}
              </div>
            {%- endunless -%}

            <div class="product-form__quantity">
              <label for="Quantity-{{ section.id }}" class="form-label">
                {{ 'products.product.quantity.label' | t }}
              </label>
              <div class="quantity-selector">
                <button type="button" class="quantity-selector__button" data-quantity-minus>
                  {% render 'icon', icon: 'minus' %}
                </button>
                <input
                  type="number"
                  id="Quantity-{{ section.id }}"
                  name="quantity"
                  value="1"
                  min="1"
                  class="quantity-selector__input"
                  form="product-form"
                >
                <button type="button" class="quantity-selector__button" data-quantity-plus>
                  {% render 'icon', icon: 'plus' %}
                </button>
              </div>
            </div>

            <div class="product-form__submit">
              <button
                type="submit"
                name="add"
                class="button button--full"
                {% unless current_variant.available %}disabled{% endunless %}
              >
                {%- if current_variant.available -%}
                  {{ 'products.product.add_to_cart' | t }}
                {%- else -%}
                  {{ 'products.product.sold_out' | t }}
                {%- endif -%}
              </button>
            </div>

            <select name="id" id="ProductSelect-{{ section.id }}" class="visually-hidden">
              {%- for variant in product.variants -%}
                <option
                  value="{{ variant.id }}"
                  {% if variant == current_variant %}selected{% endif %}
                  {% unless variant.available %}disabled{% endunless %}
                >
                  {{ variant.title }} - {{ variant.price | money }}
                </option>
              {%- endfor -%}
            </select>
          {%- endform -%}

          {%- comment -%} Trust Badges {%- endcomment -%}
          <div class="product-main__trust">
            <div class="trust-badge">
              {% render 'icon', icon: 'check' %}
              <span>Free shipping over ${{ settings.cart_free_shipping_threshold }}</span>
            </div>
            <div class="trust-badge">
              {% render 'icon', icon: 'check' %}
              <span>30-day returns</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .product-main__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .product-main__grid {
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
    }
  }

  .product-gallery__main {
    margin-bottom: 1rem;
  }

  .product-gallery__item {
    display: none;
    aspect-ratio: 3 / 4;
    background-color: var(--color-neutral-medium);
  }

  .product-gallery__item.active {
    display: block;
  }

  .product-gallery__item img,
  .product-gallery__item video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-gallery__thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 0.75rem;
  }

  .product-gallery__thumbnail {
    aspect-ratio: 3 / 4;
    border: 2px solid transparent;
    background: none;
    padding: 0;
    cursor: pointer;
    overflow: hidden;
  }

  .product-gallery__thumbnail.active {
    border-color: var(--color-primary);
  }

  .product-gallery__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-main__info--sticky {
    position: sticky;
    top: 100px;
  }

  .product-main__vendor {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
  }

  .product-main__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .product-main__price {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .product-main__price-current {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .product-main__price-compare {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    text-decoration: line-through;
  }

  .product-main__sku {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  .product-main__description {
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .product-form__option {
    margin-bottom: 1.5rem;
  }

  .product-form__option-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .product-form__option-values {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .product-form__option-values input[type="radio"] {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .product-form__option-values label {
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--color-border);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .product-form__option-values input:checked + label {
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    color: var(--color-neutral-light);
  }

  .product-form__quantity {
    margin-bottom: 1.5rem;
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .quantity-selector__button {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--color-border);
    background: none;
    cursor: pointer;
  }

  .quantity-selector__button svg {
    width: 16px;
    height: 16px;
  }

  .quantity-selector__input {
    width: 80px;
    text-align: center;
    border: 2px solid var(--color-border);
    padding: 0.5rem;
  }

  .product-form__submit {
    margin-bottom: 2rem;
  }

  .product-main__trust {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.875rem;
  }

  .trust-badge svg {
    width: 20px;
    height: 20px;
    color: var(--color-success);
  }
</style>

<script>
  // Gallery functionality
  document.querySelectorAll('.product-gallery__thumbnail').forEach(thumb => {
    thumb.addEventListener('click', function() {
      const mediaId = this.dataset.mediaId;
      
      // Update active thumbnail
      document.querySelectorAll('.product-gallery__thumbnail').forEach(t => t.classList.remove('active'));
      this.classList.add('active');
      
      // Update active image
      document.querySelectorAll('.product-gallery__item').forEach(item => item.classList.remove('active'));
      document.querySelector(`[data-media-id="${mediaId}"].product-gallery__item`).classList.add('active');
    });
  });

  // Quantity selector
  document.querySelector('[data-quantity-minus]')?.addEventListener('click', function() {
    const input = this.parentElement.querySelector('input');
    const currentValue = parseInt(input.value);
    if (currentValue > 1) {
      input.value = currentValue - 1;
    }
  });

  document.querySelector('[data-quantity-plus]')?.addEventListener('click', function() {
    const input = this.parentElement.querySelector('input');
    input.value = parseInt(input.value) + 1;
  });
</script>

{% schema %}
{
  "name": "Product Information",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_sticky_add_to_cart",
      "label": "Enable sticky add to cart",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_sku",
      "label": "Show SKU",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show share buttons",
      "default": true
    }
  ]
}
{% endschema %}
