<section class="main-cart section" data-section-id="{{ section.id }}">
    <div class="container">
      <h1 class="cart-title">{{ 'cart.general.title' | t }}</h1>

      {%- if cart.item_count > 0 -%}
        <form action="{{ routes.cart_url }}" method="post" novalidate>
          <div class="cart-grid">
            <div class="cart-items">
              {%- for item in cart.items -%}
                <div class="cart-item" data-line-item="{{ forloop.index }}">
                  <div class="cart-item__image">
                    {%- if item.image -%}
                      <img
                        src="{{ item.image | image_url: width: 200 }}"
                        alt="{{ item.image.alt | escape }}"
                        loading="lazy"
                      >
                    {%- endif -%}
                  </div>

                  <div class="cart-item__details">
                    <h3 class="cart-item__title">
                      <a href="{{ item.url }}">{{ item.product.title }}</a>
                    </h3>
                    
                    {%- unless item.product.has_only_default_variant -%}
                      <p class="cart-item__variant">{{ item.variant.title }}</p>
                    {%- endunless -%}

                    <div class="cart-item__price">
                      {{ item.final_line_price | money }}
                    </div>

                    <div class="cart-item__quantity">
                      <label for="quantity-{{ forloop.index }}" class="visually-hidden">
                        {{ 'products.product.quantity.label' | t }}
                      </label>
                      <input
                        type="number"
                        id="quantity-{{ forloop.index }}"
                        name="updates[]"
                        value="{{ item.quantity }}"
                        min="0"
                        data-line="{{ forloop.index }}"
                        class="cart-item__quantity-input"
                      >
                    </div>
                  </div>

                  <button
                    type="button"
                    class="cart-item__remove"
                    onclick="this.previousElementSibling.querySelector('input').value = 0; this.closest('form').submit();"
                    aria-label="Remove item"
                  >
                    {% render 'icon', icon: 'close' %}
                  </button>
                </div>
              {%- endfor -%}
            </div>

            <div class="cart-summary">
              <h2 class="cart-summary__title">{{ 'cart.general.subtotal' | t }}</h2>
              <p class="cart-summary__price">{{ cart.total_price | money }}</p>
              <p class="cart-summary__note">{{ 'cart.general.taxes_and_shipping_at_checkout' | t }}</p>
              
              <button type="submit" name="checkout" class="button button--full">
                {{ 'cart.general.checkout' | t }}
              </button>

              <a href="/collections/all" class="cart-summary__continue">
                {{ 'cart.general.continue_shopping' | t }}
              </a>
            </div>
          </div>
        </form>
      {%- else -%}
        <div class="cart-empty">
          <p>{{ 'cart.general.empty' | t }}</p>
          <a href="/collections/all" class="button">
            {{ 'cart.general.continue_shopping' | t }}
          </a>
        </div>
      {%- endif -%}
    </div>
  </section>

<style>
  .cart-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .cart-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .cart-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .cart-item {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    gap: 1.5rem;
    padding: 1.5rem;
    border: 1px solid var(--color-border);
  }

  .cart-item__image {
    aspect-ratio: 3 / 4;
    background-color: var(--color-neutral-medium);
  }

  .cart-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .cart-item__variant {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.75rem;
  }

  .cart-item__price {
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .cart-item__quantity-input {
    width: 80px;
    padding: 0.5rem;
    border: 2px solid var(--color-border);
    text-align: center;
  }

  .cart-item__remove {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--color-text-secondary);
  }

  .cart-summary {
    padding: 2rem;
    border: 1px solid var(--color-border);
    height: fit-content;
    position: sticky;
    top: 120px;
  }

  .cart-summary__title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .cart-summary__price {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .cart-summary__note {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  .cart-summary__continue {
    display: block;
    text-align: center;
    margin-top: 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .cart-empty {
    text-align: center;
    padding: 4rem 0;
  }

  .cart-empty p {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }
</style>

{% schema %}
{
  "name": "Cart",
  "settings": []
}
{% endschema %}
