<div class="filter-drawer" data-filter-drawer>
  <div class="filter-drawer__overlay" data-filter-drawer-close></div>
  
  <div class="filter-drawer__panel">
    <div class="filter-drawer__header">
      <h2>{{ 'collections.filters.title' | t }}</h2>
      <button type="button" class="filter-drawer__close" data-filter-drawer-close aria-label="Close filters">
        {% render 'icon', icon: 'close' %}
      </button>
    </div>

    <div class="filter-drawer__content">
      {%- for filter in collection.filters -%}
        <details class="filter-group" open>
          <summary class="filter-group__title">
            {{ filter.label }}
            <span class="filter-group__icon">{% render 'icon', icon: 'chevron-down' %}</span>
          </summary>

          <div class="filter-group__options">
            {%- case filter.type -%}
              {%- when 'list' -%}
                {%- for value in filter.values -%}
                  <label class="filter-option">
                    <input
                      type="checkbox"
                      name="{{ value.param_name }}"
                      value="{{ value.value }}"
                      {% if value.active %}checked{% endif %}
                      data-filter-input
                    >
                    <span class="filter-option__label">
                      {{ value.label }}
                      <span class="filter-option__count">({{ value.count }})</span>
                    </span>
                  </label>
                {%- endfor -%}

              {%- when 'price_range' -%}
                <div class="price-range">
                  <div class="price-range__inputs">
                    <input
                      type="number"
                      name="{{ filter.min_value.param_name }}"
                      placeholder="{{ 'collections.filters.from' | t }}"
                      min="0"
                      max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                      value="{{ filter.min_value.value | default: '' }}"
                      data-filter-input
                    >
                    <span>-</span>
                    <input
                      type="number"
                      name="{{ filter.max_value.param_name }}"
                      placeholder="{{ 'collections.filters.to' | t }}"
                      min="0"
                      max="{{ filter.range_max | money_without_currency | replace: ',', '' }}"
                      value="{{ filter.max_value.value | default: '' }}"
                      data-filter-input
                    >
                  </div>
                </div>
            {%- endcase -%}
          </div>
        </details>
      {%- endfor -%}
    </div>

    <div class="filter-drawer__footer">
      <button type="button" class="button button--secondary" data-filter-clear>
        {{ 'collections.filters.clear_all' | t }}
      </button>
      <button type="button" class="button button--primary" data-filter-apply>
        {{ 'collections.filters.apply' | t }}
      </button>
    </div>
  </div>
</div>

<style>
  .filter-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9998;
    pointer-events: none;
  }

  .filter-drawer.active {
    pointer-events: auto;
  }

  .filter-drawer__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    transition: background-color 0.3s ease;
  }

  .filter-drawer.active .filter-drawer__overlay {
    background-color: rgba(0, 0, 0, 0.5);
  }

  .filter-drawer__panel {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    max-height: 85vh;
    background-color: var(--color-neutral-light);
    transform: translateY(100%);
    transition: transform 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .filter-drawer.active .filter-drawer__panel {
    transform: translateY(0);
  }

  .filter-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .filter-drawer__header h2 {
    font-size: 1.25rem;
    margin: 0;
  }

  .filter-drawer__close {
    background: none;
    border: none;
    padding: 0.5rem;
    cursor: pointer;
  }

  .filter-drawer__close svg {
    width: 24px;
    height: 24px;
  }

  .filter-drawer__content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .filter-group {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
  }

  .filter-group__title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-weight: 600;
    cursor: pointer;
    list-style: none;
  }

  .filter-group__title::-webkit-details-marker {
    display: none;
  }

  .filter-group__icon svg {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .filter-group[open] .filter-group__icon svg {
    transform: rotate(180deg);
  }

  .filter-group__options {
    padding-top: 1rem;
  }

  .filter-option {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.5rem 0;
    cursor: pointer;
  }

  .filter-option input[type="checkbox"] {
    width: 18px;
    height: 18px;
  }

  .filter-option__label {
    flex: 1;
    display: flex;
    justify-content: space-between;
  }

  .filter-option__count {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .price-range__inputs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .price-range__inputs input {
    flex: 1;
    padding: 0.5rem;
    border: 2px solid var(--color-border);
  }

  .filter-drawer__footer {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .filter-drawer__footer .button {
    flex: 1;
  }
</style>

<script>
  class FilterDrawer {
    constructor() {
      this.drawer = document.querySelector('[data-filter-drawer]');
      this.openButtons = document.querySelectorAll('[data-filter-drawer-open]');
      this.closeButtons = document.querySelectorAll('[data-filter-drawer-close]');
      this.applyButton = document.querySelector('[data-filter-apply]');
      this.clearButton = document.querySelector('[data-filter-clear]');
      this.inputs = document.querySelectorAll('[data-filter-input]');
      
      this.init();
    }

    init() {
      this.openButtons.forEach(button => {
        button.addEventListener('click', () => this.open());
      });

      this.closeButtons.forEach(button => {
        button.addEventListener('click', () => this.close());
      });

      if (this.applyButton) {
        this.applyButton.addEventListener('click', () => this.apply());
      }

      if (this.clearButton) {
        this.clearButton.addEventListener('click', () => this.clear());
      }
    }

    open() {
      this.drawer.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    close() {
      this.drawer.classList.remove('active');
      document.body.style.overflow = '';
    }

    apply() {
      const form = new FormData();
      this.inputs.forEach(input => {
        if (input.type === 'checkbox' && input.checked) {
          form.append(input.name, input.value);
        } else if (input.type === 'number' && input.value) {
          form.append(input.name, input.value);
        }
      });

      const params = new URLSearchParams(form);
      window.location.href = `${window.location.pathname}?${params.toString()}`;
    }

    clear() {
      window.location.href = window.location.pathname;
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new FilterDrawer());
  } else {
    new FilterDrawer();
  }
</script>

{% schema %}
{
  "name": "Filter Drawer",
  "settings": []
}
{% endschema %}
