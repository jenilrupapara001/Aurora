<section class="influencer-spotlight section">
  <div class="container">
    {%- if section.settings.heading != blank -%}
      <h2 class="influencer-spotlight__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.settings.subheading != blank -%}
      <p class="influencer-spotlight__subheading">{{ section.settings.subheading }}</p>
    {%- endif -%}

    <div class="influencer-grid">
      {%- for block in section.blocks -%}
        <div class="influencer-card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="influencer-card__image">
              <img
                src="{{ block.settings.image | image_url: width: 400 }}"
                alt="{{ block.settings.name | escape }}"
                loading="lazy"
              >
              
              {%- if block.settings.instagram_handle != blank -%}
                <div class="influencer-card__overlay">
                  <a href="https://instagram.com/{{ block.settings.instagram_handle }}" target="_blank" rel="noopener" class="influencer-card__instagram">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                    </svg>
                    @{{ block.settings.instagram_handle }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}

          <div class="influencer-card__content">
            {%- if block.settings.name != blank -%}
              <h3 class="influencer-card__name">{{ block.settings.name }}</h3>
            {%- endif -%}

            {%- if block.settings.quote != blank -%}
              <blockquote class="influencer-card__quote">
                "{{ block.settings.quote }}"
              </blockquote>
            {%- endif -%}

            {%- if block.settings.product_link != blank -%}
              <a href="{{ block.settings.product_link }}" class="influencer-card__link">
                {{ 'sections.influencer.shop_look' | t }}
              </a>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .influencer-spotlight {
    background-color: {{ section.settings.background_color }};
  }

  .influencer-spotlight__heading {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .influencer-spotlight__subheading {
    text-align: center;
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin-bottom: 3rem;
  }

  .influencer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .influencer-card {
    text-align: center;
  }

  .influencer-card__image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    margin-bottom: 1.5rem;
    border-radius: 50%;
  }

  .influencer-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .influencer-card:hover .influencer-card__image img {
    transform: scale(1.05);
  }

  .influencer-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .influencer-card:hover .influencer-card__overlay {
    opacity: 1;
  }

  .influencer-card__instagram {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: white;
    text-decoration: none;
    font-weight: 600;
  }

  .influencer-card__name {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .influencer-card__quote {
    font-style: italic;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .influencer-card__link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--color-primary);
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .influencer-card__link:hover {
    background-color: var(--color-primary);
    color: var(--color-neutral-light);
  }

  @media (max-width: 767px) {
    .influencer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Influencer Spotlight",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen On"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Loved by influencers and fashion enthusiasts"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f9f9f9"
    }
  ],
  "blocks": [
    {
      "type": "influencer",
      "name": "Influencer",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Influencer Name"
        },
        {
          "type": "text",
          "id": "instagram_handle",
          "label": "Instagram handle (without @)"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Absolutely love this brand!"
        },
        {
          "type": "url",
          "id": "product_link",
          "label": "Product link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Influencer Spotlight",
      "blocks": [
        {
          "type": "influencer"
        },
        {
          "type": "influencer"
        },
        {
          "type": "influencer"
        }
      ]
    }
  ]
}
{% endschema %}
