{%- paginate blog.articles by 12 -%}
  <section class="main-blog section">
    <div class="container">
      {% render 'breadcrumbs' %}

      <header class="blog-header">
        <h1 class="blog-title">{{ blog.title }}</h1>
        {%- if blog.description != blank -%}
          <p class="blog-description">{{ blog.description }}</p>
        {%- endif -%}
      </header>

      {%- if blog.articles_count > 0 -%}
        <div class="blog-grid">
          {%- for article in blog.articles -%}
            <article class="blog-card">
              {%- if article.image -%}
                <a href="{{ article.url }}" class="blog-card__image">
                  <img
                    srcset="{{ article.image | image_url: width: 400 }} 400w,
                            {{ article.image | image_url: width: 600 }} 600w"
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                  >
                </a>
              {%- endif -%}

              <div class="blog-card__content">
                <div class="blog-card__meta">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: format: 'month_day_year' }}
                  </time>
                  {%- if article.comments_count > 0 -%}
                    <span class="blog-card__comments">
                      {{ article.comments_count }} {{ 'blog.article.comments' | t: count: article.comments_count }}
                    </span>
                  {%- endif -%}
                </div>

                <h2 class="blog-card__title">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h2>

                {%- if article.excerpt != blank -%}
                  <p class="blog-card__excerpt">{{ article.excerpt | strip_html | truncate: 150 }}</p>
                {%- endif -%}

                <a href="{{ article.url }}" class="blog-card__link">
                  {{ 'blog.article.read_more' | t }}
                </a>
              </div>
            </article>
          {%- endfor -%}
        </div>

        {% render 'pagination', paginate: paginate %}
      {%- else -%}
        <div class="blog-empty">
          <p>{{ 'blog.general.no_articles' | t }}</p>
        </div>
      {%- endif -%}
    </div>
  </section>
{%- endpaginate -%}

<style>
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .blog-title {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .blog-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .blog-card {
    border: 1px solid var(--color-border);
    overflow: hidden;
    transition: transform 0.2s ease;
  }

  .blog-card:hover {
    transform: translateY(-4px);
  }

  .blog-card__image {
    display: block;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .blog-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .blog-card__image img {
    transform: scale(1.05);
  }

  .blog-card__content {
    padding: 1.5rem;
  }

  .blog-card__meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
  }

  .blog-card__title {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .blog-card__title a {
    color: inherit;
    text-decoration: none;
  }

  .blog-card__title a:hover {
    color: var(--color-primary);
  }

  .blog-card__excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .blog-card__link {
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
    color: var(--color-primary);
    text-decoration: none;
  }

  .blog-card__link:hover {
    text-decoration: underline;
  }

  .blog-empty {
    text-align: center;
    padding: 4rem 0;
    color: var(--color-text-secondary);
  }

  @media (max-width: 767px) {
    .blog-grid {
      grid-template-columns: 1fr;
    }

    .blog-title {
      font-size: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Blog",
  "settings": []
}
{% endschema %}
