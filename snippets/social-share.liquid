<div class="social-share">
  <span class="social-share__label">{{ 'general.social.share' | t }}</span>
  
  <a
    href="https://www.facebook.com/sharer.php?u={{ share_permalink | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-share__link"
    aria-label="Share on Facebook"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
    </svg>
  </a>

  <a
    href="https://twitter.com/share?text={{ share_title | url_encode }}&url={{ share_permalink | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-share__link"
    aria-label="Share on Twitter"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
    </svg>
  </a>

  <a
    href="https://pinterest.com/pin/create/button/?url={{ share_permalink | url_encode }}&media={{ share_image | image_url: width: 1024 }}&description={{ share_title | url_encode }}"
    target="_blank"
    rel="noopener"
    class="social-share__link"
    aria-label="Share on Pinterest"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 2C6.48 2 2 6.48 2 12c0 4.26 2.67 7.9 6.43 9.34-.09-.79-.17-2.01.04-2.87.19-.78 1.24-5.26 1.24-5.26s-.32-.63-.32-1.57c0-1.47.85-2.57 1.91-2.57.9 0 1.34.68 1.34 1.49 0 .91-.58 2.27-.88 3.53-.25 1.06.53 1.92 1.58 1.92 1.9 0 3.36-2 3.36-4.89 0-2.56-1.84-4.35-4.46-4.35-3.04 0-4.82 2.28-4.82 4.64 0 .92.35 1.9.79 2.43.09.1.1.19.07.3-.08.32-.26 1.04-.29 1.19-.04.19-.15.23-.35.14-1.33-.62-2.16-2.56-2.16-4.12 0-3.36 2.44-6.45 7.04-6.45 3.7 0 6.58 2.64 6.58 6.17 0 3.68-2.32 6.64-5.54 6.64-1.08 0-2.1-.56-2.45-1.22 0 0-.54 2.05-.67 2.55-.24.95-.9 2.14-1.34 2.87C9.25 21.85 10.61 22 12 22c5.52 0 10-4.48 10-10S17.52 2 12 2z"/>
    </svg>
  </a>

  <button
    type="button"
    class="social-share__link"
    onclick="navigator.clipboard.writeText('{{ share_permalink }}'); this.querySelector('span').textContent = 'Copied!';"
    aria-label="Copy link"
  >
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
    </svg>
    <span class="visually-hidden">Copy link</span>
  </button>
</div>

<style>
  .social-share {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 0;
  }

  .social-share__label {
    font-weight: 600;
    font-size: 0.875rem;
  }

  .social-share__link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 2px solid var(--color-border);
    color: var(--color-neutral-dark);
    text-decoration: none;
    background: none;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .social-share__link:hover {
    border-color: var(--color-primary);
    background-color: var(--color-primary);
    color: var(--color-neutral-light);
  }
</style>
